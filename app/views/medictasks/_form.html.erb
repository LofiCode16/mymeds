<div class="row"> 
  <div class="col"><br/>

<%= form_with(model: medictask) do |form| %>
  <% if medictask.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medictask.errors.count, "error") %> prohibited this medictask from being saved:</h2>

      <ul>
        <% medictask.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %><br>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, class: 'form-control' %><br>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %><br>
  </div>

  <div class="field">
    <%= form.label :medic %>
    <%= form.select :medic, options_for_select([['Medic 1'],['Medic 2'],['Medic 3']], class: 'custom-select') %><br>
  </div><br>

  <div class="field">
    <%= form.label :speciality %>
    <%= form.select :speciality, options_for_select([['Speciality 1'],['Speciality 2'],['Speciality 3']], class: 'custom-select') %><br>
  </div><br>

  <div class="actions text-center">
    <%= form.submit 'Create', class: 'btn btn-success' %>
  </div>
<% end %>

</div>
</div>
