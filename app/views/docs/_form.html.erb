<div class="row">
  <div class="col-lg-4 offset-lg-4"><br/>

    <%= form_with(model: doc, local: true) do |form| %>
      <% if doc.errors.any? %>
        <% doc.errors.full_messages.each do |message| %>
          <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>   
      <% end %>

      <div class="field text-center">
          <label for="file" class="btn btn-outline-info">&#128247;</label>
          <input type="file" id="file" style="visibility: hidden; max-width: 10px;">
      </div>

      <div class="field">
        <%= form.label :photo %>
        <%= form.text_field :photo, class: 'form-control' %>
      </div><br/>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div><br/>

      <div class="field">
        <%= form.label :content %>
        <%= form.text_field :content, class: 'form-control' %>
      </div><br/>

      <div class="actions text-center">      
        <%= form.submit "Save!", class:'btn btn-success' %>
      </div>

    <% end %>

  </div>
</div>