<div class="modal" tabindex="-1" role="dialog" id="myModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
    <% if @medictasks.count.zero? && @docs.count.zero?%>
      <div class="col-lg-6 text-center">
        <%= link_to 'Add your first date!', new_medictask_path, class: 'btn btn-success w-20 pt-5 pb-5 mt-4', data: {remote: true} %>
      </div>
    <% else %>
      <div class="col-lg-2 text-center">
        <%= link_to 'New date +', new_medictask_path, class: 'btn btn-success mt-4', data: {remote: true} %>
        <%= render 'medictasks/index.html.erb'%>
      </div>
    <% end %>  

  <% if @docs.count.zero?%>
    <div class="col-lg-6 text-center">
      <%= link_to 'Add your first doc!', new_doc_path, class: 'btn btn-success pt-5 pb-5 mt-4', data: { remote: true} %>
    </div>  
  <% else %>  
    <div class="col-lg-10 text-center" >
      <%= link_to 'New doc +', new_doc_path, class: 'btn btn-success mt-4', data: { remote: true} %>

      <div class="card-deck">
        <div class="row" id="docs">
          <%= render @docs %>
        </div>  
      </div>

    </div>
  <% end %>  


  



</div>