<h1>Docs</h1>

<div class="row">
  <div class="col-lg-2">

    <%= link_to 'New Doc +', new_doc_path, class: 'btn btn-success w-100 mt-4' %>
    <%= render 'find' %>
  </div>

  <div class="col-lg-8">

    <div class="card-deck">
      <div class="row">
        <% @docs.each do |doc| %>
        
          <div class="col-sm-4 mt-4">
            <div class="card">
              <%= image_tag doc.photo, class: 'card-img-top' %>
              <div class="card-body">
                <h5 class="card-title"><%= doc.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= time_ago_in_words(doc.created_at)%></h6>
                <p class="card-text text-truncate"><%= doc.content %></p>
                <%= link_to 'Show', doc, class: 'card-link' %>
                <%= link_to 'Edit', edit_doc_path(doc), class: 'card-link'  %>
                <%= link_to 'Destroy', doc, class: 'card-link text-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
            
        <%end%>
      </div>
    </div>

  </div>

   <div class="col-lg-2">

    <%= link_to 'New date +', new_doc_path, class: 'btn btn-success w-100 mt-4' %>
    <%= render 'find' %>

  </div>



</div>