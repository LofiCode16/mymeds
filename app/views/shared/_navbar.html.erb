<% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <%= link_to 'MyMeds', root_path, class: 'navbar-brand'%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= 'active' if current_page?(root_path)%>">
          <%= link_to  "Home", root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Members
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if @members.present?%>
              <% @members.each do |member| %>
                <%= member.name %>
              <% end %>
            <% end %>  
            <div class="dropdown-divider"></div>
            <%= link_to  "Add member +", new_member_path, class: 'dropdown-item' %>
          </div>
        </li>
      </ul>
      <div>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="nav-item"> <%= image_tag current_user.image.variant(resize: "32x32") %> Welcome <%= current_user.name %>!</span> 
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to  "Edit Profile", edit_user_registration_path, class: 'dropdown-item' %>
              <%= link_to  "Logout", destroy_user_session_path, class: 'dropdown-item', method: :delete %>
            </div>
          </li>       
      </div>
    </div>
  </nav>
<% end %>